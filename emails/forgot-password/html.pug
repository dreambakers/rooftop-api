head
  meta(charset='UTF-8')
  style.
    html,
    body {
    height: 100%;
    width: 100%;
    background-color: #FAFAFA;
    }
    .card {
    background: white;
    padding: 30px;
    }
    .button {
    width: 140px;
    cursor: pointer;
    border: 0;
    color: white;
    background-color: #3949AB;
    border-radius: 5px;
    padding: 15px;
    outline: none;
    }
    hr {
    border-color: #ffffff4f;
    }
    a {
      text-decoration: none;
      color: #3f51b5;
      font-weight: bold;
    }

#preview_text(style='display:none!important;font-size:1px;color:#FFFFFF;lineheight:1px;max-height:0px;max-width:0px;opacity:0;overflow:hidden;')
  | !{translate(`${language}`, 'messages', 'youCanChangePassword')}

table(width='100%' border='0' cellspacing='0' cellpadding='0')
  tr
    td(align='center')
      .card(style='max-width: 500px; font-family: arial')
        img(src='https://ynm.de/assets/images/logo_em.png' alt='Logo' title='Logo' style='display:block')
        hr
        h4
          | !{translate(`${language}`, 'messages', 'thankYouForUsing')}
        p
          | !{translate(`${language}`, 'messages', 'youCanChangePassword')}
        a(href=`${passwordResetUrl}`)
          | !{translate(`${language}`, 'labels', 'resetPassword')}
        hr(style='margin-top: 20px')
        p(style='text-align:center') yenoma.com
